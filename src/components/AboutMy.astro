---
import { Github, Linkedin } from "@lucide/astro";

import profileImage from "../../public/assets/carlos.webp";
import { Image } from "astro:assets";
---

<section id="AboutMy" class="flex flex-col items-center justify-center gap-10 py-25 px-4 lg:flex-row lg:justify-around lg:px-0">
  <div class="w-full lg:w-fit space-y-6">
    <h1 class="text-4xl lg:text-6xl font-bold text-white">
      <span class="block">Carlos Rodríguez</span>
      <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500"
      >
        Desarrollador Web
      </span>
    </h1>
    <p class="text-xl text-slate-300">
      Creando experiencias web modernas y atractivas con las últimas
      tecnologías.
    </p>
    <div class="flex flex-wrap gap-4">
      <a
        href="#Projects"
        class="px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-medium rounded-lg hover:shadow-lg hover:shadow-blue-500/25 transition-all duration-300"
      >
        Ver Proyectos
      </a>
      <a
        href="#Contact"
        class="px-6 py-3 bg-white/10 font-medium rounded-lg border border-white/20 backdrop-blur-sm hover:bg-white/20 transition-all duration-300"
      >
        Contactar
      </a>
    </div>

    <div class="flex items-center gap-4 pt-4">
      <a
        href="https://github.com/Carlosrodr97"
        target="_blank"
        rel="noopener noreferrer"
        class="text-slate-300 hover:text-white transition-colors"
        aria-label="Perfil de GitHub de Carlos Rodríguez Cebador"
      >
        <Github class="size-6"/>
      </a>
      <a
        href="https://www.linkedin.com/in/carlos-rodríguez-cebador-b99815164"
        target="_blank"
        rel="noopener noreferrer"
        class="text-slate-300 hover:text-white transition-colors"
        aria-label="Perfil de LinkedIn de Carlos Rodríguez Cebador"
      >
        <Linkedin class="size-6"/>
      </a>
    </div>
  </div>

  <div class="w-full lg:w-fit flex flex-col justify-center items-center gap-2">
      <div
        class="w-64 h-64 lg:w-80 lg:h-80 rounded-full overflow-hidden border-4 border-white/20"
      >
        <Image
          src={profileImage}
          alt="Carlos Rodríguez"
          class="w-full h-full object-cover"
          width={320}
          height={320}
          loading="eager"
          fetchpriority="high"
          format="webp"
          quality={85}
          densities={[1, 2]}
        />
      </div>
      <div
        class="bg-gradient-to-r from-blue-500 to-purple-600 px-6 py-2 rounded-lg font-medium"
      >
        Disponible para proyectos
      </div>
  </div>
</section>
