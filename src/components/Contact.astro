---
import Link from "../assets/Icons/link.svg";
---

<div
  id="Contact"
  class="flex flex-col align-middle text-center w-2xl space-y-2 max-sm:w-full"
>
  <h2 class="text-2xl text-red-400 max-sm:text-xl">CONTACTO</h2>
  <div class="flex flex-col space-y-1 text-lg max-sm:text-sm">
    <div class="flex justify-center gap-4 max-sm:flex-col max-sm:items-center max-sm:gap-0">
      <label>Tel√©fono:</label>
      <span class="flex items-center gap-2 group hover:cursor-pointer">
        <a href="tel:+34602533497">+34 602533497</a>
        <img
          src={Link.src}
          alt="Link"
          class="invert w-5 h-5 opacity-0 group-hover:opacity-100 transition-opacity duration-200 max-sm:opacity-100 max-lg:opacity-100"
        />
      </span>
    </div>
    <div class="flex justify-center gap-4 max-sm:flex-col max-sm:items-center max-sm:gap-0">
      <label>Email:</label>
      <span class="flex items-center gap-2 group hover:cursor-pointer">
        <a href="mailto:carlosrodriguezcebador@hotmail.com">carlosrodriguezcebador@hotmail.com</a>
        <img
          src={Link.src}
          alt="Link"
          class="invert w-5 h-5 opacity-0 group-hover:opacity-100 transition-opacity duration-200 max-sm:opacity-100 max-lg:opacity-100"
        />
