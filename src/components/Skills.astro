---
import Vite from "../../public/assets/Icons/vite.svg";
import React from "../../public/assets/Icons/react.svg";
import Tailwind from "../../public/assets/Icons/tailwind.svg";
import Node from "../../public/assets/Icons/node-js.svg";
import Html from "../../public/assets/Icons/html-5.svg";
import Css from "../../public/assets/Icons/css-3.svg";
import AstroIcon from "../../public/assets/Icons/astro.svg";
import GitHub from "../../public/assets/Icons/github.svg";
import Docker from "../../public/assets/Icons/docker.svg";
import MySQL from "../../public/assets/Icons/mysql.svg";
import PostgreSQL from "../../public/assets/Icons/postgresql.svg";
import JavaScript from "../../public/assets/Icons/javascript.svg";
import Next from "../../public/assets/Icons/next-js.svg";
import Angular from "../../public/assets/Icons/angular.svg";
import VSCode from "../../public/assets/Icons/vs-code.svg";
import { Image } from "astro:assets";
---

<section id="Skills" class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl font-bold text-slate-900">
        Mis Habilidades
      </h2>
      <div class="mt-4 h-1 w-24 bg-blue-500 mx-auto"></div>
      <p class="mt-6 text-xl text-slate-600 max-w-2xl mx-auto">
        Tecnolog√≠as y herramientas con las que trabajo.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
      <div
        class="flex flex-col items-center bg-slate-50 rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300"
      >
        <h3 class="text-2xl font-bold text-slate-900 mb-6">Frontend</h3>
        <div class="grid grid-cols-3 gap-10">
          <Image src={Html} alt="Html" class="size-12" width={12} height={12} />
          <Image src={Css} alt="Css" class="size-12" width={12} height={12} />
          <Image src={JavaScript} alt="JavaScript" class="size-12" width={12} height={12} />
          <Image src={React} alt="React" class="size-12" width={12} height={12} />
          <Image src={Next} alt="Next.js" class="size-12" width={12} height={12} />
          <Image src={Angular} alt="Angular" class="size-12" width={12} height={12} />
          <Image src={AstroIcon} alt="Astro" class="size-12" width={12} height={12} />
          <Image src={Tailwind} alt="Tailwind" class="size-12" width={12} height={12} />
        </div>
      </div>

      <div
        class="flex flex-col items-center bg-slate-50 rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300"
      >
        <h3 class="text-2xl font-bold text-slate-900 mb-6">Backend</h3>
        <div class="grid grid-cols-3 gap-10">
          <Image src={Node} alt="Node" class="size-12" width={12} height={12} />
          <Image src={MySQL} alt="MySQL" class="size-12" width={12} height={12} />
          <Image src={PostgreSQL} alt="PostgreSQL" class="size-12" width={12} height={12} />
        </div>
      </div>

      <div
        class="flex flex-col items-center bg-slate-50 rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300"
      >
        <h3 class="text-2xl font-bold text-slate-900 mb-6">Herramientas</h3>
        <div class="grid grid-cols-3 gap-10">
          <Image src={Vite} alt="Vite" class="size-12" width={12} height={12} />
          <Image src={GitHub} alt="GitHub" class="size-12" width={12} height={12} />
          <Image src={Docker} alt="Docker" class="size-12" width={12} height={12} />
          <Image src={VSCode} alt="VSCode" class="size-12" width={12} height={12} />
        </div>
      </div>
    </div>
  </div>
</section>
