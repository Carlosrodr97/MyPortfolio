---
import CardProject from "./CardProject.astro";
import Technologie from "./Technologie.astro";
import React from "../../public/assets/Icons/react.svg";
import Vite from "../../public/assets/Icons/vite.svg";
import Node from "../../public/assets/Icons/node-js.svg";
import PostgreSQL from "../../public/assets/Icons/postgresql.svg";
import Tailwind from "../../public/assets/Icons/tailwind.svg";
import AstroIcon from "../../public/assets/Icons/astro.svg";
import Next from "../../public/assets/Icons/next-js.svg";
---

<div
  id="Projects"
  class="flex flex-col align-middle text-center w-2xl py-5 gap-3 max-sm:w-19/20"
>
  <h2 class="text-2xl text-red-400 max-sm:text-xl">PROYECTOS</h2>
  <CardProject
    title="Sky Blue Weather"
    description="Aplicación web que permite consultar el clima de cualquier ciudad de España, utilizando la API de AEMET. Incluye una interfaz intuitivay sencilla."
    date="En desarrollo"
    link="https://sky-blue-weather.vercel.app/"
  >
    <Technologie logo={Next} name="Next" />
    <Technologie logo={Tailwind} name="Tailwind" />
  </CardProject>
  <CardProject
    title="Futsal24DH"
    description="Web para un Torneo de Fútbol Sala, donde los equipos podrán inscribirse para participar y ver en tiempo real durante el torneo los cambios en los resultados y clasificación del torneo."
    date="04/2025"
    link="https://futsal24-dh.vercel.app/"
  >
    <Technologie logo={AstroIcon} name="Astro" />
    <Technologie logo={Tailwind} name="Tailwind" />
    <Technologie logo={Node} name="Node" />
    <Technologie logo={PostgreSQL} name="PostgreSQL" />
    <Technologie logo={React} name="React" />
  </CardProject>
  <CardProject
    title="Menú de Restaurante"
    description="Aplicación web que permite a los clientes de un restaurante visualizar el menú."
    date="03/2025"
    link="https://restaurant-menu-six-phi.vercel.app"
  >
    <Technologie logo={AstroIcon} name="Astro" />
    <Technologie logo={Tailwind} name="Tailwind" />
  </CardProject>
  <CardProject
    title="ScraperURL"
    description="Aplicación web que en la actualidad analiza y extrae elementos SVG de sitios web a partir de una URL proporcionada. Próximamente podrá extraer cualquier elemento HTML."
    date="02/2025"
    link="https://scraper-url.vercel.app/"
  >
    <Technologie logo={React} name="React" />
    <Technologie logo={Vite} name="Vite" />
    <Technologie logo={Node} name="Node" />
    <Technologie logo={Tailwind} name="Tailwind" />
  </CardProject>
  <CardProject
    title="Recreación de Google"
    description="Recreación de la página de inicio de Google."
    date="01/2025"
    link="https://recreation-of-google.vercel.app/"
  >
    <Technologie logo={React} name="React" />
    <Technologie logo={Vite} name="Vite" />
  </CardProject>
  <CardProject
    title="Lista de la compra"
    description="Lista de la compra. Puede agregar artículos y su cantidad o eliminarlos."
    date="01/2025"
    link="https://to-do-list-rho-fawn-93.vercel.app/"
  >
    <Technologie logo={React} name="React" />
    <Technologie logo={Vite} name="Vite" />
    <Technologie logo={Node} name="Node" />
    <Technologie logo={PostgreSQL} name="PostgreSQL" />
  </CardProject>
  <CardProject
    title="Recreación de YouTube"
    description="Recreación de la página de inicio de YouTube."
    date="01/2025"
    link="https://recreation-of-you-tube.vercel.app/"
  >
    <Technologie logo={React} name="React" />
    <Technologie logo={Vite} name="Vite" />
  </CardProject>
  <CardProject
    title="Tienda Online"
    description="Tienda online con características principales como gestión de productos, imágenes alojadas en Amazon S3, búsqueda y filtrado, autenticación y roles, persistencia de datos, etc."
    date="10/2024"
    link="https://tienda-online-pearl.vercel.app/"
  >
    <Technologie logo={React} name="React" />
    <Technologie logo={Vite} name="Vite" />
    <Technologie logo={Node} name="Node" />
    <Technologie logo={PostgreSQL} name="PostgreSQL" />
  </CardProject>
  <CardProject
    title="Vacaciones Toscano"
    description="Aplicación web para la gestión de solicitudes de vacaciones, diseñada para facilitar el proceso de petición y aprobación por parte de los empleados y administradores de una empresa."
    date="07/2024"
    link="https://vacaciones-toscano.vercel.app/"
  >
    <Technologie logo={React} name="React" />
    <Technologie logo={Vite} name="Vite" />
    <Technologie logo={Node} name="Node" />
    <Technologie logo={PostgreSQL} name="PostgreSQL" />
  </CardProject>
</div>
